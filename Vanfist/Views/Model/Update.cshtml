@model Vanfist.DTOs.Requests.UpdateModelRequest
@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    var categories = ViewBag.Categories as List<Vanfist.Entities.Category>;
    var atts = ViewBag.Attachments as IEnumerable<Vanfist.Entities.Attachment>;
}

<h2>@ViewData["Title"]</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Update" asp-controller="Model" enctype="multipart/form-data" method="post" class="mb-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label class="form-label">Tên sản phẩm</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label class="form-label">Giá</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="row g-2">
        <div class="col-md-4">
            <label class="form-label">Chiều dài</label>
            <input asp-for="Length" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Length" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Chiều rộng</label>
            <input asp-for="Width" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Width" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Chiều cao</label>
            <input asp-for="Height" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-2 mt-1">
        <div class="col-md-4">
            <label class="form-label">Chiều dài cơ sở</label>
            <input asp-for="Wheelbase" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Wheelbase" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">NEDC</label>
            <input asp-for="NEDC" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="NEDC" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Kích thước vành</label>
            <input asp-for="RimSize" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="RimSize" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-2 mt-1">
        <div class="col-md-4">
            <label class="form-label">Công suất tối đa</label>
            <input asp-for="MaximumPower" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="MaximumPower" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Mô-men xoắn tối đa</label>
            <input asp-for="MaximumTorque" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="MaximumTorque" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label class="form-label">Màu sắc</label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-2">
        <label class="form-label">Danh mục</label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var cat in categories)
            {
                <option value="@cat.Id" selected="@(cat.Id == Model.CategoryId)">@cat.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <hr class="my-3" />
    <h4 class="h5">Ảnh hiện tại</h4>

    @if (atts != null && atts.Any())
    {
        <div class="row g-3">
            @foreach (var a in atts)
            {
                <div class="col-6 col-md-3">
                    <div class="card">
                        <img src="~/uploads/@Model.Id/@a.FileName" class="card-img-top" alt="@a.FileName" />
                        <div class="card-body p-2 d-flex align-items-center">
                            <!-- Persist existing attachment ids for validation -->
                            <input type="hidden" name="ExistingAttachmentIds" value="@a.Id" />
                            <input type="checkbox"
                                   class="form-check-input me-2"
                                   id="del_@a.Id"
                                   name="DeletedAttachmentIds"
                                   value="@a.Id" />
                            <label class="form-check-label small mb-0" for="del_@a.Id">
                                Chọn xóa
                            </label>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted fst-italic">Chưa có ảnh</p>
    }

    <div class="form-group mt-3">
        <label class="form-label">Thêm ảnh mới</label>
        <input asp-for="Attachments" class="form-control" type="file" multiple />
        <small class="form-text text-muted">Có thể chọn nhiều ảnh. Nếu bạn xóa hết ảnh hiện có, bắt buộc tải lên ít nhất một ảnh mới.</small>
        <span asp-validation-for="Attachments" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary mt-3">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}