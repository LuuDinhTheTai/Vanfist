@model Vanfist.DTOs.Requests.TestDriveRequestCreate

@{
    ViewData["Title"] = "Đăng ký lái thử";
    var models = ViewBag.Models as IEnumerable<Vanfist.DTOs.Responses.ModelResponse>;
}

<h2 class="mb-4">Đăng ký lái thử</h2>

<form asp-action="Index" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Họ và tên</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Số điện thoại</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ModelId" class="form-label">Chọn mẫu xe</label>
        <select asp-for="ModelId" class="form-select">
            <option value="">-- Chọn xe --</option>
            @if (models != null)
            {
                foreach (var m in models)
                {
                    <option value="@m.Id">@m.Name</option>
                }
            }
        </select>
        <span asp-validation-for="ModelId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PreferredTime" class="form-label">Thời gian mong muốn</label>
        <input asp-for="PreferredTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="PreferredTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Note" class="form-label">Ghi chú</label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Gửi đăng ký</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
